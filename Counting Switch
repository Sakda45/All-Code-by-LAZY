#include <stdio.h>
#include "pico/stdlib.h"
#include "hardware/gpio.h"

const uint RED_PIN = 15;
const uint SW_PIN = 14;

int main() {
    // setup pins
    gpio_init(RED_PIN);
    gpio_set_dir(RED_PIN, GPIO_OUT);
    gpio_init(SW_PIN);
    gpio_set_dir(SW_PIN, GPIO_IN);
    gpio_pull_up(SW_PIN);

    // loop blink
    while (true) {
        if (!gpio_get(SW_PIN)) {
            gpio_put(RED_PIN, 1);
        }else{
            gpio_put(RED_PIN, 0);
        }
        sleep_ms(50);
    }
}
